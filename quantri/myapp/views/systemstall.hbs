<div class="main">
  <div class="content container-fluid">
    <div class="heading">
      <h3>Quản lý Gian Hàng</h3>
      <br>
    </div>
    <div class="clear"></div>
    <div class=" content_top table-responsive col-md-8">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th>ID Gian hàng</th>
            <th>Tên</th>
            <th>Chi tiết</th>
          </tr>
        </thead>
        <tbody>
          {{#if liststall}}
          {{#each liststall}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.name}}</td>
            <td><a href="/admin/products-{{this.id}}">
                <button type="button">Xem</button>
              </a></td>
            <td><a href="/admin/delete-stall-{{this.id}}">
                <button type="button">Xóa</button>
              </a></td>
          </tr>
          {{/each}}
          {{/if}}
        </tbody>
      </table>
    </div>
    <div class="col-md-4 content_top ">
      <form method="POST" action="/admin/add-stall">
        <div style="color: blueviolet;">
          <h3>Thêm gian hàng</h3>
        </div>
        <div class="row">
          <div class="col-md-4"><label for="namestall">Tên gian hàng</label></div>
          <div class="col-md-4"><input class="form-control" name="namestall" type="text" id="namestall" required></div>
          <div class="col-md-4"><button class="btn btn-primary btn-sm">Thêm gian hàng</button></div>
        </div>
      </form>
    </div>
  </div>
</div>