<div class="main">
  <div class="content container-fluid">
    <div class="heading">
      <h3>Quản lý Gian Hàng</h3>
      <br>
    </div>
    <div class="sort">
      <p>Sắp xếp theo:
        <select>
          <option>A-Z</option>
          <option>Z-A</option>
        </select>
      </p>
    </div>
    <div class="show">
      <p>Số lượng hiển thị:
        <select>
          <option>5</option>
          <option>10</option>
          <option>15</option>
          <option>20</option>
          <option>25</option>
          <option>Tất cả</option>
        </select>
      </p>
    </div>
    <div class="page-no">
      <p>Trang:<ul>
          <li><a href="#">1</a></li>
          <li class="active"><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li>[<a href="#"> Tiếp theo>>></a>]</li>
        </ul>
      </p>
    </div>
    <div class="clear"></div>
    <div class=" content_top table-responsive col-md-8">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th>Tên</th>
            <th>Số lượng</th>
            <th>Chi tiết</th>
          </tr>
        </thead>
        <tbody>
          {{#if liststall}}
          {{#each liststall}}
          <tr>
            <td>{{this.name}}</td>
            <td>30000</td>
            <td><a href="/admin/products-{{this.id}}">
                <button type="button">Xem</button>
              </a></td>
            <td><a href="">
                <button type="button">Xóa</button>
              </a></td>
            <td><a href="">
                <button type="button">Sửa</button>
              </a></td>
          </tr>
          {{/each}}
          {{/if}}
        </tbody>
      </table>
      <div class="buttons">
        <div><button class="grey">Thêm gian hàng</button></div>
      </div>
    </div>
  </div>
</div>