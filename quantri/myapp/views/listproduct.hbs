<div class="main">
  <div class="content container-fluid">
    <div class="heading">
      <h3>{{title}}: {{type}}</h3>
      <br>
    </div>
    <form action="/admin/products-{{idcategory}}" method="GET">
      <div class="sort">
        <p>Lọc theo:
          <select id="price" name="Price" onchange="this.form.submit();">
            <option value="0">Tất cả</option>
            <option value="1">Dưới 10 triệu</option>
            <option value="2">Từ 10 - 30 triệu</option>
            <option value="3">Trên 30 triệu</option>
          </select>
        </p>
      </div>
      <div class="show">
        <p>Sắp xếp theo:
          <select id="sort" name="SortBy" onchange="this.form.submit();">
            <option value="0">--</option>
            <option value="1">Tên A-Z</option>
            <option value="2">Tên Z-A</option>
            <option value="3">Giá thấp đến cao</option>
            <option value="4">Giá cao đến thấp</option>
          </select>
        </p>
      </div>
      <div class="page-no">
        <p>
          <ul>
            <li><button class="btn" type="submit" id="pagePrev" name="PagePrev" value="{{currentPage}}">Trang
                trước</button></li>
            Trang:
            <li>{{currentPage}}</li>
            /
            <li>{{pages}}</li>
            <li><button class="btn" type="submit" id="pageNext" name="PageNext" value="{{currentPage}}">Trang
                sau</button>
            </li>
          </ul>
        </p>
      </div>
    </form>
    <div class="clear"></div>
    <div class=" content_top table-responsive col-md-12">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th>Tên</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Số lượng bán</th>
            <th>Mô tả</th>
          </tr>
        </thead>
        <tbody>
          {{#if listproduct}}
          {{#each listproduct}}
          <tr>
            <td>{{this.name}}</td>
            <td>{{this.price}}</td>
            <td>{{this.count}}</td>
            <td>{{this.count_sell}}</td>
            <td>{{this.description}}</td>
            <td><a href="/admin/detail-product-{{this._id}}">
                <button type="button">Xem</button>
              </a></td>
            <td><a href="/admin/delete-product-{{this._id}}">
                <button type="button">Xóa</button>
              </a></td>
          </tr>
          {{/each}}
          {{/if}}
        </tbody>
      </table>
      <div class="buttons">
        <div><a href="/admin/addproduct-{{idcategory}}"> <button class="grey">Thêm sản phẩm</button></a></div>
      </div>
    </div>
  </div>
</div>
<script>
  var selPrice = "{{selPriceRange}}";
  var selSort = "{{selectedSort}}";
  document.getElementById("price").selectedIndex = selPrice;
  document.getElementById("sort").selectedIndex = selSort;
</script>