<div class="main">
    <div class="content container-fluid">
        <div class="heading">
            <h3>Quản lý đơn đặt hàng</h3>
            <br>
        </div>
        <div class="clear"></div>
        <div class=" content_top table-responsive col-md-12">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th width="25%" >ID đơn hàng</th>
                        <th width="15%" >Ngày đặt</th>
                        <th width="15%" >ID Người đặt</th>
                        <th width="15%" >Trạng thái</th>
                        <th width="10%" >Ghi chú</th>
                    </tr>
                </thead>
                <tbody>
                    {{#if Data}}
                    {{#each Data}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.date}}</td>
                        <td>{{this.ID_Usser}}</td>
                        <td>{{this.status}}</td>
                        <td>{{this.note}}</td>
                        <td><a href="/admin/detail-order-{{this.id}}"> <button class="Button" type="submit"> Chi tiết
                                </button></a></td>
                        <td><a href="/admin/delete-order-{{this.id}}"> <button class="Button" type="submit"> Xóa
                                </button></a></td>
                        <td><a href="/admin/deliver-order-{{this.id}}"> <button id="btn-deliver" class="Button" type="submit"> Giao hàng
                                </button></a></td>
                    </tr>
                    {{/each}}
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div>