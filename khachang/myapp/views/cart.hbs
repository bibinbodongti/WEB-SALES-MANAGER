<h2 class="text-center">Giỏ hàng</h2>
<div class="container" style="background-color: white;">
    <table id="cart" class="table table-hover table-condensed">
        {{#if data}}
        {{#each data}}
        <thead>
            <tr>
                <th style="width:50%">Tên sản phẩm</th>
                <th style="width:10%">Giá</th>
                <th style="width:8%">Số lượng</th>
                <th style="width:22%" class="text-center">Thành tiền</th>
                <th style="width:10%"> </th>
            </tr>
        </thead>
        <tbody style="background-color:white;">
            <form method="POST" action="/delete/{{this._id}}">
                <tr>
                <td data-th="Product">
                    <div class="row">
                        <div class="col-sm-2 hidden-xs"><img src="{{this.image_link}}" alt="Sản phẩm 1"
                                class="img-responsive" width="100">
                        </div>
                        <div class="col-sm-10">
                            <h4 class="nomargin">{{this.name}}</h4>
                            <p>{{this.description}}</p>
                        </div>
                    </div>
                </td>
                <td data-th="Price">{{this.price}}</td>
                <td data-th="Quantity"><input class="form-control text-center" value="1" type="number">
                </td>
                <td data-th="Subtotal" class="text-center">{{this.price}}</td>
                <td class="actions" data-th="">
                    <button class="btn btn-info btn-sm">  <i class="fa fa-edit"></i>
                    </button>
                    <button class="btn btn-danger btn-sm">Xóa<i class="fa fa-trash-o"></i>
                    </button>
                </td>
            </tr>
            </form>
            {{/each}}
            {{else}} <div class="text-center">Không có gì trong giỏ hàng</div>
            {{/if}}
            <tr>
                <td><a href="/home" class="btn btn-warning"><i class="fa fa-angle-left"></i> Tiếp tục mua hàng</a>
                </td>
                <td colspan="2" class="hidden-xs"> </td>
                <td class="hidden-xs text-center"><strong>Tổng tiền : {{sum}} đ</strong>
                </td>
                <td><a href="#" class="btn btn-success btn-block">Thanh toán <i class="fa fa-angle-right"></i></a>
                </td>
            </tr>
            </tfoot>
    </table>
</div>