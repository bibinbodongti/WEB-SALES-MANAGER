<div class="main">
    <div class="content container-fluid">
        <div class="heading">
            <h3>Thông tin giao hàng</h3>
            <br>
        </div>
        <div class="clear"></div>
        <div class=" content_top table-responsive col-md-12">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th><b>Ngày đặt</b></th>
                        <th><b>Các sản phẩm</b></th>
                        <th><b>Trạng thái</b></th>
                    </tr>
                </thead>
                <tbody>
                    {{#if Data}}
                    {{#each Data}}
                    <tr>
                        <td>{{this.date}}</td>
                        <td>
                            {{#each this.listproduct}}
                                <li>{{this.name}}</li>
                                <br>
                            {{/each}}
                        </td>
                        <td>{{this.status}}</td>
                        <td><a href="/users/check-order-{{this.id}}"> <button class="Button" type="submit"> Đánh dấu đã nhận
                                </button></a></td>
                        <td><a href="/users/delete-order-{{this.id}}"> <button class="Button" type="submit"> Hủy đơn hàng
                                </button></a></td>
                    </tr>
                    {{/each}}
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div>